<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<FlowPane hgap="25.0" prefHeight="400.0" prefWidth="600.0" vgap="25.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.CardController">
	<children>
		<HBox alignment="CENTER" prefHeight="44.0" prefWidth="550.0">
			<children>
				<ToggleButton id="back_btn" mnemonicParsing="false" onAction="#handleBack" prefHeight="30.0" prefWidth="100.0" />
				<ImageView fx:id="header_iv" fitHeight="44.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true" />
				<ToggleButton id="clear_btn" mnemonicParsing="false" onAction="#handleClear" prefHeight="30.0" prefWidth="100.0" />
			</children>
		</HBox>
		<VBox prefHeight="212.0" prefWidth="550.0">
			<HBox fx:id="list_hb" alignment="CENTER" prefHeight="175.0">
		         <FlowPane.margin>
		            <Insets top="15.0" />
		         </FlowPane.margin>
		      </HBox>
         <HBox alignment="CENTER" prefHeight="27.0" prefWidth="550.0">
            <children>
               <Label fx:id="numcard" alignment="CENTER" prefHeight="25.0" prefWidth="84.0" text="Cards : 52">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Label>
            </children>
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin>
         </HBox>
		</VBox>
		<FlowPane alignment="CENTER" prefHeight="44.0" prefWidth="550.0">
			<children>
				<ToggleButton id="random_btn" mnemonicParsing="false" onAction="#handleRandom" prefHeight="44.0" prefWidth="150.0" />
			</children>
		</FlowPane>
	</children>
	<padding>
		<Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
	</padding>
</FlowPane>
