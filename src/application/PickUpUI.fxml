<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<FlowPane hgap="25.0" prefHeight="400.0" prefWidth="600.0" vgap="25.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.PickUpController">
	<children>
		<HBox alignment="CENTER" prefHeight="44.0" prefWidth="550.0">
			<children>
				<ToggleButton id="back_btn" mnemonicParsing="false" onAction="#handleBack" prefHeight="30.0" prefWidth="100.0" />
				<ImageView fx:id="header_iv" fitHeight="44.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true" />
				<ToggleButton id="clear_btn" mnemonicParsing="false" onAction="#handleClear" prefHeight="30.0" prefWidth="100.0" />
			</children>
		</HBox>
		<VBox alignment="CENTER" prefHeight="212.0" prefWidth="550.0">
			<children>

				<HBox alignment="CENTER">
					<children>
						<TextArea fx:id="input_ta" prefHeight="150.0" prefWidth="450.0" promptText="Input Your List Here ... ( Ex. Red, Green, Blue )" wrapText="true">
							<FlowPane.margin>
								<Insets left="150.0" />
							</FlowPane.margin>
							<font>
								<Font size="18.0" />
							</font>
						</TextArea>
					</children>
				</HBox>
				<HBox alignment="CENTER" prefWidth="550.0">
					<children>
						<RadioButton fx:id="norepeat_rb" mnemonicParsing="false" prefHeight="25.0" prefWidth="112.0" text="NO REPEAT" textFill="WHITE">
							<font>
								<Font size="16.0" />
							</font>
						</RadioButton>
					</children>
					<VBox.margin>
						<Insets top="10.0" />
					</VBox.margin>
				</HBox>

				<HBox alignment="CENTER">
					<children>
						<Label fx:id="randomed_lb" alignment="CENTER" prefHeight="50.0" prefWidth="300.0" text="?">
							<font>
								<Font size="20.0" />
							</font>
							<HBox.margin>
								<Insets />
							</HBox.margin>
						</Label>
					</children>
					<VBox.margin>
						<Insets top="10.0" />
					</VBox.margin>
				</HBox>
			</children>
		</VBox>
		<FlowPane alignment="CENTER" prefHeight="44.0" prefWidth="550.0">
			<children>
				<ToggleButton id="random_btn" mnemonicParsing="false" onAction="#handleRandom" prefHeight="44.0" prefWidth="180.0" />
			</children>
		</FlowPane>
	</children>
	<padding>
		<Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
	</padding>
</FlowPane>
