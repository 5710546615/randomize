<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>

<FlowPane hgap="10.0" prefHeight="400.0" prefWidth="600.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.CoinController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <Button mnemonicParsing="false" onAction="#handleBack" text="&lt; Back" />
      <Label alignment="CENTER" prefHeight="17.0" prefWidth="454.0" text="Coin Flipper" />
      <Button mnemonicParsing="false" onAction="#handleRecent" text="Recent" />
      <TextField fx:id="num_tf" alignment="CENTER" promptText="No. of Coin (Max : 3)">
         <FlowPane.margin>
            <Insets left="210.0" />
         </FlowPane.margin>
      </TextField>
      <Label fx:id="default_lb" text="(Default : 1)">
         <FlowPane.margin>
            <Insets left="255.0" />
         </FlowPane.margin>
      </Label>
      <HBox fx:id="list_hb" alignment="CENTER" prefHeight="188.0" prefWidth="579.0">
         <FlowPane.margin>
            <Insets top="15.0" />
         </FlowPane.margin>
      </HBox>
      <Button mnemonicParsing="false" onAction="#handleFlip" text="Flip">
         <FlowPane.margin>
            <Insets left="265.0" />
         </FlowPane.margin>
      </Button>
   </children>
</FlowPane>
